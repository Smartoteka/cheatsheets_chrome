{
  "name": "Smartoteka",
  "description": "Your own knowledge base",
  "version": "1.0",
  "manifest_version": 3,
  "author": "Tatarkov M",
  "icons": {
    "48": "images/icon_blue_48.png",
    "64": "images/icon_blue_64.png",
    "128": "images/icon_blue_128.png"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  
  "permissions": [
    "storage",
    "unlimitedStorage",
    "tabs",
    "activeTab",
    "commands",
    "system.display",
    "scripting"
  ],
  "host_permissions": [
    "https://localhost:44383/*",
    "https://www.api.smartoteka.ru/*"
  ],
  "commands": {
    "open-search": {
      "suggested_key": {
        "default": "Alt+F"
      },
      "description": "Open search window",
      "action": {}
    },
    "add-tab-to-session": {
      "suggested_key": {
        "default": "Alt+T"
      },
      "description": "Add tab to selected session",
      "action": {}
    },
    "open-search-on-page": {
      "suggested_key": {
        "default": "Alt+F"
      },
      "description": "Search on page",
      "action": {}
    }
  },
  "action": {
    "default_title": "Smartoteka"
  }
}